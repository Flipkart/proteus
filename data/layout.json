{
    "type": "ScrollView",
    "layout_width": "match_parent",
    "layout_height": "match_parent",
    "children": [{
        "type": "LinearLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "orientation": "vertical",
        "padding": "16dp",
        "children": [{
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "fontFamily": "fonts/rubik_regular.ttf",
            "lineSpacingExtra": "3.3sp",
            "text": "Source(s) of Income",
            "textColor": "#000759",
            "textSize": "18.3sp"
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "layout_marginTop": "8dp",
            "fontFamily": "fonts/rubik_regular.ttf",
            "lineSpacingExtra": "6.7sp",
            "text": "Please select one or more following source of income category(s)",
            "textColor": "#6f7f9f",
            "textSize": "13.3sp"
        }, {
            "type": "RecyclerView",
            "layout_width": "match_parent",
            "layout_height": "match_parent",
            "layout_marginTop": "10dp",
            "id": "listViewIncomeSelection",
            "itemMargin": "8dp",
            "validationRequired": true,
            "data": {
                "items": "@{incomeSources}"
            },
            "layout_manager": {
                "type": "GridLayoutManager",
                "spanCount": 2
            },
            "adapter": {
                "@": {
                    "type": "MultiSelectionListAdapter",
                    "item-count": "@{items.$length}",
                    "item-layout": {
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "data": {
                            "item": "@{items[$index]}"
                        },
                        "background": "@drawable/bg_income_source",
                        "gravity": "center_horizontal",
                        "orientation": "vertical",
                        "children": [{
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "id": "labelIncomeSource",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "gravity": "center_horizontal",
                            "lineSpacingExtra": "2.3sp",
                            "padding": "24dp",
                            "text": "@{item.label}",
                            "textColor": "@color/color_income_source",
                            "textSize": "12sp"
                        }, {
                            "type": "ImageView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "id": "imageIncomeSource",
                            "src": "@{item.icon}"
                        }]
                    }
                }
            }
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "12sp",
            "textColor": "#99a1c5",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "lineSpacingExtra": "9sp",
            "layout_marginTop": "24dp",
            "fontFamily": "fonts/rubik_medium.ttf",
            "text": "OTHERS"
        }, {
            "type": "AppCompatEditText",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "textSize": "16sp",
            "textColor": "#99a1c5",
            "lineSpacingExtra": "9sp",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "fontFamily": "fonts/rubik_medium.ttf",
            "background": "@drawable/bg_edit_text_bordered",
            "textColorHint": "#c8cde3",
            "paddingLeft": "12dp",
            "paddingRight": "12dp",
            "paddingTop": "16dp",
            "paddingBottom": "16dp",
            "textColor": "@color/colorSelected",
            "maxLength": "50",
            "layout_marginTop": "4dp",
            "hint": "Please type hereâ€¦"
        }, {
            "type": "TextView",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "textSize": "12sp",
            "textColor": "#99a1c5",
            "layout_marginLeft": "8dp",
            "layout_marginRight": "8dp",
            "lineSpacingExtra": "9sp",
            "layout_marginTop": "4dp",
            "fontFamily": "fonts/rubik_medium.ttf",
            "text": "0-50 Characters"
        }, {
            "type": "TextView",
            "id": "buttonProceed",
            "layout_width": "wrap_content",
            "layout_height": "wrap_content",
            "layout_gravity": "center_horizontal",
            "layout_marginTop": "24dp",
            "background": "@drawable/drawable_button",
            "clickable": "true",
            "focusable": "true",
            "fontFamily": "fonts/rubik_medium.ttf",
            "paddingLeft": "64dp",
            "paddingTop": "16dp",
            "paddingRight": "64dp",
            "paddingBottom": "16dp",
            "onClick": "validateForm->nextScreen",
            "text": "PROCEED",
            "textColor": "@color/colorSelected"
        }]
    }]
}