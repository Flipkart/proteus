{
  "type": "ScrollView",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "scrollbars": "none",
  "children": [
    {
      "type": "LinearLayout",
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "orientation": "vertical",
      "background": "#efefef",
      "children": [
        {
          "type": "CardView",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "layout_marginTop": "16dp",
          "layout_marginRight": "16dp",
          "layout_marginLeft": "16dp",
          "layout_marginBottom": "0dp",
          "padding": "16dp",
          "cardBackgroundColor": "#ffffff",
          "cardElevation": "6dp",
          "contentPadding": "8dp",
          "cardCornerRadius": "4dp",
          "children": [
            {
              "type": "LinearLayout",
              "layout_width": "match_parent",
              "layout_height": "wrap_content",
              "orientation": "vertical",
              "children": [
                {
                  "type": "TextView",
                  "layout_width": "wrap_content",
                  "layout_height": "wrap_content",
                  "textSize": "18sp",
                  "text": "~Hello {{user.name}}"
                },
                {
                  "type": "TextView",
                  "layout_width": "wrap_content",
                  "layout_height": "wrap_content",
                  "textSize": "18sp",
                  "text": "~{{user.location.city}}, {{user.location.country}}"
                },
                {
                  "type": "LinearLayout",
                  "orientation": "vertical",
                  "layout_height": "wrap_content",
                  "layout_width": "match_parent",
                  "gravity": "center_vertical",
                  "children": [
                    {
                      "type": "TextView",
                      "layout_width": "wrap_content",
                      "layout_height": "wrap_content",
                      "textSize": "18sp",
                      "text": "Exp:"
                    },
                    {
                      "type": "HorizontalProgressBar",
                      "layout_width": "match_parent",
                      "layout_height": "wrap_content",
                      "layout_margin": "8dp",
                      "layout_marginTop": "10dp",
                      "max": "$user.experience.max",
                      "progress": "$user.experience.current"
                    },
                    {
                      "type": "LinearLayout",
                      "orientation": "horizontal",
                      "layout_height": "wrap_content",
                      "layout_width": "match_parent",
                      "gravity": "center_vertical",
                      "children": [
                        {
                          "type": "TextView",
                          "layout_weight": "1",
                          "layout_width": "0dp",
                          "layout_height": "wrap_content",
                          "textSize": "16sp",
                          "text": "0"
                        },
                        {
                          "type": "View",
                          "layout_weight": "1",
                          "layout_width": "0dp",
                          "layout_height": "wrap_content"
                        },
                        {
                          "type": "TextView",
                          "layout_weight": "1",
                          "layout_width": "0dp",
                          "layout_height": "wrap_content",
                          "textSize": "16sp",
                          "gravity": "right",
                          "text": "$user.experience.max"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "CardView",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "layout_marginLeft": "16dp",
          "layout_marginRight": "16dp",
          "layout_marginTop": "16dp",
          "cardBackgroundColor": "#ffffff",
          "cardElevation": "6dp",
          "contentPadding": "8dp",
          "cardCornerRadius": "4dp",
          "children": [
            {
              "type": "CalendarView",
              "layout_width": "match_parent",
              "layout_height": "match_parent",
              "minDate": "01/01/2017",
              "maxDate": "12/31/2017"
            }
          ]
        },
        {
          "type": "FrameLayout",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "padding": "16dp",
          "paddingBottom": "0dp",
          "children": [
            {
              "type": "LinearLayout",
              "layout_width": "match_parent",
              "layout_height": "wrap_content",
              "orientation": "vertical",
              "padding": "16dp",
              "background": "#ffffff",
              "children": [
                {
                  "type": "TextView",
                  "text": "TextView",
                  "textColor": "#000000",
                  "textSize": "12sp"
                },
                {
                  "type": "TextView",
                  "layout_width": "match_parent",
                  "gravity": "right",
                  "html": "<b>TextView</b> with <font color=#cc8322><i>HTML</i></font> content.",
                  "textSize": "14sp"
                },
                {
                  "type": "ImageView",
                  "layout_width": "60dp",
                  "layout_height": "60dp",
                  "src": "@drawable/github_icon",
                  "onClick": {
                    "someKey": "someValue"
                  },
                  "layout_marginRight": "8dp"
                },
                {
                  "type": "LinearLayout",
                  "orientation": "horizontal",
                  "layout_width": "match_parent",
                  "layout_marginTop": "8dp",
                  "children": [
                    {
                      "type": "TextView",
                      "layout_marginRight": "8dp",
                      "layout_height": "32dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "1",
                      "layout_weight": "1",
                      "gravity": "center",
                      "border": {
                        "width": "2dp",
                        "color": "#cccccc",
                        "bgColor": "#efefef"
                      }
                    },
                    {
                      "type": "TextView",
                      "layout_height": "32dp",
                      "layout_marginRight": "8dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "2",
                      "layout_weight": "2",
                      "gravity": "center",
                      "border": {
                        "width": "2dp",
                        "color": "#cccccc",
                        "bgColor": "#efefef"
                      }
                    },
                    {
                      "type": "TextView",
                      "layout_height": "32dp",
                      "layout_marginRight": "8dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "3",
                      "layout_weight": "3",
                      "gravity": "center",
                      "border": {
                        "width": "2dp",
                        "color": "#cccccc",
                        "bgColor": "#efefef"
                      }
                    }
                  ]
                },
                {
                  "type": "Button",
                  "layout_height": "50dp",
                  "layout_width": "150dp",
                  "gravity": "center",
                  "layout_marginTop": "10dp",
                  "text": "ADD TO CART",
                  "background": {
                    "type": "ripple",
                    "content": {
                      "type": "shape",
                      "shape": "rectangle",
                      "children": [
                        {
                          "type": "solid",
                          "color": "#F2575B"
                        }
                      ]
                    },
                    "color": "#f0f0f0"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "RelativeLayoutExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        },
        {
          "type": "SimpleDataBindingExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        },
        {
          "type": "DataDrivenExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        },
        {
          "type": "CircleView",
          "layout_width": "150dp",
          "layout_height": "150dp",
          "layout_marginTop": "16dp",
          "layout_marginBottom": "16dp",
          "layout_gravity": "center",
          "color": "#aaef99"
        }
      ]
    }
  ]
}