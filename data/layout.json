{
  "type": "ScrollView",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "scrollbars": "none",
  "children": [
    {
      "type": "LinearLayout",
      "layout_width": "match_parent",
      "layout_height": "match_parent",
      "orientation": "vertical",
      "background": "#efefef",
      "children": [
        {
          "type": "FrameLayout",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "padding": "16dp",
          "paddingBottom": "0dp",
          "children": [
            {
              "type": "LinearLayout",
              "layout_width": "match_parent",
              "layout_height": "wrap_content",
              "orientation": "vertical",
              "padding": "16dp",
              "background": "#ffffff",
              "children": [
                {
                  "type": "TextView",
                  "singleLine": "@bool/True",
                  "text": "TextView",
                  "textColor": "#000000",
                  "textSize": "12sp"
                },
                {
                  "type": "TextView",
                  "layout_width": "match_parent",
                  "gravity": "right",
                  "html": "<b>TextView</b> with <font color=#cc8322><i>HTML</i></font> content.",
                  "textSize": "14sp"
                },
                {
                  "type": "ImageView",
                  "layout_width": "@dimen/sixty",
                  "layout_height": "@dimen/sixty",
                  "src": "@drawable/github_icon",
                  "onClick": {
                    "someKey": "someValue"
                  },
                  "layout_marginRight": "8dp"
                },
                {
                  "type": "LinearLayout",
                  "orientation": "horizontal",
                  "layout_width": "match_parent",
                  "layout_marginTop": "8dp",
                  "children": [
                    {
                      "type": "TextView",
                      "layout_marginRight": "8dp",
                      "layout_height": "32dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "1",
                      "layout_weight": "1",
                      "gravity": "center"
                    },
                    {
                      "type": "TextView",
                      "layout_height": "32dp",
                      "layout_marginRight": "8dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "2",
                      "layout_weight": "2",
                      "gravity": "center"
                    },
                    {
                      "type": "TextView",
                      "layout_height": "32dp",
                      "layout_marginRight": "8dp",
                      "textSize": "12sp",
                      "textColor": "#2cdb81",
                      "text": "3",
                      "layout_weight": "3",
                      "gravity": "center"
                    }
                  ]
                },
                {
                  "type": "Button",
                  "layout_height": "?Theme_AppCompat:actionBarSize",
                  "layout_width": "150dp",
                  "gravity": "center",
                  "layout_marginTop" : "10dp",
                  "text" : "ADD TO CART",
                  "textColor": "?Theme_AppCompat:actionMenuTextColor",
                  "background" : {
                    "type" : "ripple",
                    "content": {
                      "type": "shape",
                      "shape": "rectangle",
                      "children": [
                        {
                          "type": "solid",
                          "color": "#FF4081"
                        }
                      ]
                    },
                    "color": "#f0f0f0"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "include",
          "layout": "RelativeLayoutExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        },
        {
          "type": "include",
          "layout": "SimpleDataBindingExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        },
        {
          "type": "include",
          "layout": "DataDrivenExample",
          "padding": "16dp",
          "paddingBottom": "0dp"
        },
        {
          "type": "CircleView",
          "layout_width": "150dp",
          "layout_height": "150dp",
          "layout_marginTop": "16dp",
          "layout_marginBottom": "16dp",
          "layout_gravity": "center",
          "color": "#aaef99"
        }
      ]
    }
  ]
}