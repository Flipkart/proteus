{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "match_parent",
    "orientation": "vertical",
    "children": [{
        "type": "TabLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "tag": "tabLayout",
        "id": "tabLayout",
        "backgroundColor": "#ffffff",
        "selectedTabIndicatorColor": "#4d6cd9",
        "tabTextColors": {
            "type": "selector",
            "android": "http://schemas.android.com/apk/res/android",
            "children": [{
                "type": "item",
                "color": "#4d6cd9",
                "state_selected": "true"
            }, {
                "type": "item",
                "color": "#806f7f9f",
                "state_focused": "false",
                "state_pressed": "false",
                "state_selected": "false"
            }]
        },
        "tabBackground": {
            "type": "shape",
            "shape": "rectangle",
            "children": [{
                "type": "solid",
                "color": "#334d6cd9"
            }, {
                "type": "corners",
                "radius": "8dp"
            }]
        }
    }, {
        "type": "ViewPager",
        "layout_width": "match_parent",
        "layout_height": "match_parent",
        "id": "viewPager",
        "tag": "viewPager",
        "background": "#ffffff",
        "data": {
            "items": "@{tabsData}"
        },
        "tabMode": "fixed",
        "adapter": {
            "@": {
                "type": "SectionsPagerAdapter",
                "children-count": "@{items.$length}",
                "children": [{
                    "type": "LinearLayout",
                    "layout_width": "match_parent",
                    "layout_height": "match_parent",
                    "orientation": "vertical",
                    "paddingLeft": "32dp",
                    "paddingRight": "32dp",
                    "paddingTop": "18dp",
                    "children": [{
                        "type": "RelativeLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "layout_marginBottom": "32dp",
                        "children": [{
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "text": "OVERDUE AMOUNT",
                            "id": "label_over_due_amount",
                            "textColor": "#a1afcd",
                            "textSize": "11sp",
                            "fontFamily": "fonts/rubik_medium.ttf"
                        }, {
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "layout_marginTop": "8dp",
                            "id": "text_over_due_amount",
                            "text": "â‚¹ 5,500",
                            "textAllCaps": "true",
                            "textColor": "#233a8c",
                            "layout_below": "label_over_due_amount",
                            "textSize": "15sp",
                            "fontFamily": "fonts/rubik_medium.ttf"
                        }, {
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "layout_alignParentEnd": "true",
                            "layout_marginTop": "5dp",
                            "background": "@drawable/drawable_button",
                            "paddingStart": "24dp",
                            "textStyle": "bold",
                            "paddingLeft": "24dp",
                            "paddingTop": "8dp",
                            "id": "button_emi_details_pay_now",
                            "paddingEnd": "24dp",
                            "paddingRight": "24dp",
                            "paddingBottom": "8dp",
                            "text": "PAY NOW",
                            "textColor": "#4d6cd9",
                            "focusable": "true",
                            "clickable": "true",
                            "focusableInTouchMode": "true",
                            "onClick": "showLoanDetails"
                        }]
                    }, {
                        "type": "StepProgressView",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "markerColor": "#ffffff",
                        "progressBackgroundColor": "#334d6cd9",
                        "progressColor": "#4d6cd9",
                        "totalProgress": 9,
                        "showMarkerText": false,
                        "markerTextSize": "0sp",
                        "textMargin": "0dp",
                        "progressBarHeight": "12dp",
                        "id": "progress_bar_emis",
                        "markerWidth": "1dp",
                        "currentProgress": 3,
                        "edgeRadius": "8dp",
                        "stepSize": 1
                    }, {
                        "type": "RelativeLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "layout_marginTop": "8dp",
                        "children": [{
                            "type": "LinearLayout",
                            "id": "layout_paid_emi_indicator",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "gravity": "center_vertical",
                            "children": [{
                                "type": "View",
                                "layout_width": "16dp",
                                "layout_height": "16dp",
                                "background": "#4d6cd9",
                                "padding": "6dp"
                            }, {
                                "type": "TextView",
                                "layout_width": "wrap_content",
                                "layout_height": "wrap_content",
                                "fontFamily": "fonts/rubik_medium.ttf",
                                "padding": "4dp",
                                "text": "03",
                                "textSize": "14sp"
                            }]
                        }, {
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "layout_below": "layout_paid_emi_indicator",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "text": "PAID",
                            "textColor": "#99a1c5",
                            "textSize": "12sp"
                        }, {
                            "type": "LinearLayout",
                            "id": "layout_pending_emi_indicator",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "layout_marginLeft": "32dp",
                            "layout_toRightOf": "layout_paid_emi_indicator",
                            "gravity": "center_vertical",
                            "children": [{
                                "type": "View",
                                "layout_width": "16dp",
                                "layout_height": "16dp",
                                "background": "#dfe6f4",
                                "padding": "6dp"
                            }, {
                                "type": "TextView",
                                "layout_width": "wrap_content",
                                "layout_height": "wrap_content",
                                "fontFamily": "fonts/rubik_medium.ttf",
                                "padding": "4dp",
                                "text": "06",
                                "textSize": "14sp"
                            }]
                        }, {
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "layout_below": "layout_pending_emi_indicator",
                            "layout_alignLeft": "layout_pending_emi_indicator",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "text": "PENDING",
                            "textColor": "#99a1c5",
                            "textSize": "12sp"
                        }, {
                            "type": "TextView",
                            "id": "text_total_emi",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "layout_alignParentRight": "true",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "padding": "4dp",
                            "text": "09",
                            "textSize": "14sp"
                        }, {
                            "type": "TextView",
                            "layout_width": "wrap_content",
                            "layout_height": "wrap_content",
                            "layout_below": "text_total_emi",
                            "layout_alignRight": "text_total_emi",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "text": "TOTAL EMI",
                            "textColor": "#99a1c5",
                            "textSize": "12sp"
                        }]
                    }, {
                        "type": "View",
                        "layout_width": "match_parent",
                        "layout_height": "1dp",
                        "layout_marginTop": "20dp",
                        "id": "divider_emi_details",
                        "layout_below": "progress_bar_emis",
                        "background": "#5ea1afcd"
                    }, {
                        "type": "TextView",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "divider_emi_details",
                        "layout_marginTop": "16dp",
                        "text": "EMI Repayment Schedule",
                        "textAllCaps": "true",
                        "id": "label_emi_repayment_schedule",
                        "textColor": "#99a1c5",
                        "textSize": "14sp",
                        "fontFamily": "fonts/rubik_medium.ttf"
                    }, {
                        "type": "RecyclerView",
                        "layout_width": "match_parent",
                        "layout_height": "match_parent",
                        "layout_below": "label_emi_repayment_schedule",
                        "background": "#ffffff",
                        "layout_marginTop": "8dp",
                        "data": {
                            "item": "@{items[$index]}",
                            "items": "@{item.emis}"
                        },
                        "layout_manager": {
                            "type": "LinearLayoutManager"
                        },
                        "adapter": {
                            "@": {
                                "type": "SimpleListAdapter",
                                "item-count": "@{items.$length}",
                                "item-layout": {
                                    "type": "RelativeLayout",
                                    "id": "emiLayout",
                                    "layout_width": "match_parent",
                                    "layout_height": "60dp",
                                    "data": {
                                        "item": "@{items[$index]}"
                                    },
                                    "children": [{
                                        "type": "LinearLayout",
                                        "id": "layoutEmiStatus",
                                        "layout_width": "wrap_content",
                                        "layout_height": "match_parent",
                                        "gravity": "center_horizontal",
                                        "orientation": "vertical",
                                        "children": [{
                                            "type": "View",
                                            "id": "lineTop",
                                            "layout_width": "1dp",
                                            "layout_height": "0dp",
                                            "layout_weight": "1",
                                            "background": "#334d6cd9",
                                            "visibility": "@{item.topLineVisibility}"
                                        }, {
                                            "type": "ImageView",
                                            "id": "imageEmiStatus",
                                            "layout_width": "24dp",
                                            "layout_height": "24dp",
                                            "src": "@{item.emiStatusImage}"
                                        }, {
                                            "type": "View",
                                            "id": "lineBottom",
                                            "layout_width": "1dp",
                                            "layout_height": "0dp",
                                            "layout_weight": "1",
                                            "background": "#334d6cd9",
                                            "visibility": "@{item.bottomLineVisibility}"
                                        }]
                                    }, {
                                        "type": "TextView",
                                        "id": "textEmiAmount",
                                        "layout_width": "wrap_content",
                                        "layout_height": "wrap_content",
                                        "layout_alignParentEnd": "true",
                                        "layout_centerVertical": "true",
                                        "text": "â‚¹ 5,500",
                                        "fontFamily": "fonts/rubik_medium.ttf",
                                        "textColor": "#233a8c",
                                        "textSize": "16sp"
                                    }, {
                                        "type": "LinearLayout",
                                        "layout_width": "wrap_content",
                                        "layout_height": "wrap_content",
                                        "layout_centerVertical": "true",
                                        "layout_marginLeft": "16dp",
                                        "layout_toStartOf": "textEmiAmount",
                                        "layout_toEndOf": "layoutEmiStatus",
                                        "orientation": "vertical",
                                        "children": [{
                                            "type": "TextView",
                                            "id": "textEmiDueDate",
                                            "layout_width": "wrap_content",
                                            "layout_height": "wrap_content",
                                            "text": "@{item.emiDueDate}",
                                            "fontFamily": "fonts/rubik_medium.ttf",
                                            "textColor": "#233a8c",
                                            "textSize": "14sp"
                                        }, {
                                            "type": "TextView",
                                            "id": "textEmiPaidDate",
                                            "layout_width": "wrap_content",
                                            "layout_height": "wrap_content",
                                            "text": "@{item.emiStatus}",
                                            "fontFamily": "fonts/rubik_medium.ttf",
                                            "textColor": "@{item.emiStatusTextColor}",
                                            "textSize": "11sp"
                                        }]
                                    }]
                                }
                            }
                        }
                    }]
                }, {
                    "type": "RelativeLayout",
                    "layout_width": "match_parent",
                    "layout_height": "wrap_content",
                    "android": "http://schemas.android.com/apk/res/android",
                    "paddingStart": "24dp",
                    "paddingLeft": "24dp",
                    "paddingTop": "16dp",
                    "paddingEnd": "24dp",
                    "paddingRight": "24dp",
                    "children": [{
                        "type": "TextView",
                        "id": "label_loan_platform",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "text_loan_status",
                        "text": "LOAN ACCOUNT NO.",
                        "textColor": "#99a1c5",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "textSize": "12sp"
                    }, {
                        "type": "TextView",
                        "id": "text_loan_platform",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "label_loan_platform",
                        "layout_marginTop": "8dp",
                        "text": "10804823048230",
                        "textAllCaps": "true",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "textColor": "#233a8c",
                        "textSize": "18sp"
                    }, {
                        "type": "TextView",
                        "id": "label_lender",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "text_loan_status",
                        "layout_alignParentEnd": "true",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "text": "DISBURSED DATE",
                        "textColor": "#99a1c5",
                        "textSize": "12sp"
                    }, {
                        "type": "TextView",
                        "id": "text_lender",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "label_lender",
                        "layout_alignParentEnd": "true",
                        "layout_marginTop": "8dp",
                        "text": "1st Aug 2019",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "textColor": "#233a8c",
                        "textSize": "18sp"
                    }, {
                        "type": "TextView",
                        "id": "label_emi_overdue_amount",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "text_loan_platform",
                        "layout_marginTop": "24dp",
                        "text": "SANCTIONED AMOUNT",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "textColor": "#99a1c5",
                        "textSize": "12sp",
                        "textStyle": "bold"
                    }, {
                        "type": "TextView",
                        "id": "text_emi_overdue_amount",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "label_emi_overdue_amount",
                        "layout_marginTop": "8dp",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "text": "â‚¹ 70,000",
                        "textAllCaps": "true",
                        "textColor": "#233a8c",
                        "textSize": "18sp",
                        "textStyle": "bold"
                    }, {
                        "type": "TextView",
                        "id": "label_emi_date",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "text_loan_platform",
                        "layout_alignParentEnd": "true",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "layout_marginTop": "24dp",
                        "text": "DISBURSED AMOUNT",
                        "textColor": "#99a1c5",
                        "textSize": "12sp",
                        "textStyle": "bold"
                    }, {
                        "type": "TextView",
                        "id": "text_emi_date",
                        "layout_width": "wrap_content",
                        "layout_height": "wrap_content",
                        "layout_below": "label_emi_date",
                        "layout_alignParentEnd": "true",
                        "fontFamily": "fonts/rubik_medium.ttf",
                        "layout_marginTop": "8dp",
                        "text": "â‚¹ 68,000",
                        "textAllCaps": "true",
                        "textColor": "#233a8c",
                        "textSize": "18sp",
                        "textStyle": "bold"
                    }]
                }]
            }
        }
    }]
}