{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "match_parent",
    "orientation": "vertical",
    "children": [{
        "type": "TabLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "tag": "tabLayout"
    }, {
        "type": "ViewPager",
        "layout_width": "match_parent",
        "layout_height": "match_parent",
        "id": "viewPager",
        "tag": "viewPager",
        "background": "#ffffff",
        "data": {
            "items": "@{permissions}"
        },
        "adapter": {
            "@": {
                "type": "SectionsPagerAdapter",
                "item-count": "@{items.$length}",
                "item-layout": {
                    "type": "LinearLayout",
                    "layout_width": "match_parent",
                    "layout_height": "match_parent",
                    "orientation": "vertical",
                    "layout_marginTop": "35dp",
                    "paddingLeft": "18dp",
                    "paddingRight": "18dp",
                    "paddingTop": "15dp",
                    "data": {
                        "item": "@{items[$index]}"
                    },
                    "children": [{
                        "type": "TextView",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "textColor": "#2d3566",
                        "textSize": "13sp",
                        "text": "@{item.title}"
                    }, {
                        "type": "TextView",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "textColor": "#6f7f9f",
                        "textSize": "14sp",
                        "layout_marginTop": "10dp",
                        "text": "@{item.description}"
                    }]
                }
            }
        }
    }]
}