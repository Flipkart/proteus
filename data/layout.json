{
    "type": "LinearLayout",
    "layout_width": "match_parent",
    "layout_height": "match_parent",
    "orientation": "vertical",
    "children": [{
        "type": "LinearLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "orientation": "horizontal",
        "gravity": "center",
        "paddingLeft": "32dp",
        "paddingRight": "32dp",
        "paddingTop": "16dp",
        "paddingBottom": "16dp",
        "weightSum": "3",
        "children": [{
            "type": "TextView",
            "layout_width": "0dp",
            "layout_height": "wrap_content",
            "layout_weight": "1",
            "fontFamily": "fonts/rubik_medium.ttf",
            "text": "Date",
            "textColor": "#5e6aa0",
            "textSize": "14sp"
        }, {
            "type": "TextView",
            "layout_width": "0dp",
            "layout_height": "wrap_content",
            "layout_weight": "1",
            "fontFamily": "fonts/rubik_medium.ttf",
            "gravity": "center",
            "lineSpacingExtra": "3sp",
            "text": "Details",
            "textColor": "#5e6aa0",
            "textSize": "14sp"
        }, {
            "type": "TextView",
            "layout_width": "0dp",
            "layout_height": "wrap_content",
            "layout_weight": "1",
            "fontFamily": "fonts/rubik_medium.ttf",
            "gravity": "right",
            "text": "Amount",
            "textColor": "#5e6aa0",
            "textSize": "14sp"
        }]
    }, {
        "type": "View",
        "layout_width": "match_parent",
        "layout_height": "1dp",
        "background": "#233a8c",
        "layout_marginLeft": "18dp",
        "layout_marginRight": "18dp"
    }, {
        "type": "RecyclerView",
        "layout_width": "match_parent",
        "layout_height": "match_parent",
        "itemMargin": "16dp",
        "background": "#ffffff",
        "layout_marginTop": "10dp",
        "data": {
            "items": "@{payments}"
        },
        "layout_manager": {
            "type": "LinearLayoutManager"
        },
        "adapter": {
            "@": {
                "type": "SimpleListAdapter",
                "item-count": "@{items.$length}",
                "item-layout": {
                    "type": "CardView",
                    "layout_width": "match_parent",
                    "layout_height": "wrap_content",
                    "cardCornerRadius": "8dp",
                    "cardElevation": "6dp",
                    "children": [{
                        "type": "LinearLayout",
                        "layout_width": "match_parent",
                        "layout_height": "wrap_content",
                        "orientation": "horizontal",
                        "gravity": "center_vertical",
                        "padding": "16dp",
                        "weightSum": "3",
                        "children": [{
                            "type": "TextView",
                            "layout_width": "0dp",
                            "layout_height": "wrap_content",
                            "layout_weight": "1",
                            "fontFamily": "fonts/rubik_regular.ttf",
                            "text": "05 Aug 2019",
                            "textColor": "#5e6aa0",
                            "textSize": "12sp"
                        }, {
                            "type": "TextView",
                            "layout_width": "0dp",
                            "layout_height": "wrap_content",
                            "layout_weight": "1",
                            "fontFamily": "fonts/rubik_regular.ttf",
                            "gravity": "center_horizontal",
                            "lineSpacingExtra": "3sp",
                            "text": "Auto Debit\nTxn 89765654",
                            "textColor": "#5e6aa0",
                            "textSize": "12sp"
                        }, {
                            "type": "TextView",
                            "layout_width": "0dp",
                            "layout_height": "wrap_content",
                            "layout_weight": "1",
                            "fontFamily": "fonts/rubik_medium.ttf",
                            "gravity": "right",
                            "text": "3,500.00",
                            "textColor": "#5e6aa0",
                            "textSize": "12sp"
                        }]
                    }]
                }
            }
        }
    }]
}