{
  "type": "ScrollView",
  "layout_width": "match_parent",
  "layout_height": "match_parent",
  "background": "#fefefe",
  "scrollbars": "none",
  "children": [
    {
      "type": "LinearLayout",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "orientation": "vertical",
      "marginTop": "?Theme_AppCompat:actionBarSize",
      "padding": "?Theme_AppCompat:actionBarSize",
      "background": "?attr/selectableItemBackground",
      "clickable": "true",
      "dataContext": {
        "sellers": "sellers_1",
        "product": "product"
      },
      "children": [
        {
          "type": "TextView",
          "text": "Proteus Demo",
          "style": "h1.blue",
          "animation" : {
            "type": "rotate",
            "fromDegrees": "-100",
            "toDegrees": "0",
            "pivotX": "100%",
            "pivotY": "100%",
            "duration": "1700"
          }
        },
        {
          "type": "LinearLayout",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "background": "#ffffff",
          "orientation": "vertical",
          "paddingBottom": "16dp",
          "paddingLeft": "16dp",
          "paddingRight": "16dp",
          "paddingTop": "16dp",
          "children": [
            {
              "type": "ImageView",
              "src": "http://img5a.flixcart.com/www/promos/new/20150521-151534-flipkart-logo.png",
              "layout_height": "wrap_content",
              "layout_width": "wrap_content",
              "invisibility": "$product.isFK"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "$product.title",
              "textColor": {
                "type": "selector",
                "children": [
                  {
                    "type": "item",
                    "state_enabled": "false",
                    "color": "#9D9FA2"
                  },
                  {
                    "type": "item",
                    "state_enabled": "true",
                    "color": "#4189c7"
                  }
                ]
              }
            },
            {
              "type": "TextView",
              "padding": "8dp",
              "border": {
                "width": "3dp",
                "color": "#ff0000",
                "radius": "3dp",
                "bgColor": "#00ff00"
              },
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "html": "~<font color=#440044>({{product.subTitle}})</font>"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "~({{product.float}}$(number))",
              "textColor": "#444444"
            },
            {
              "type": "LinearLayout",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "orientation": "horizontal",
              "children": [
                {
                  "type": "RatingBar",
                  "layout_width": "wrap_content",
                  "layout_height": "12dp",
                  "layout_marginLeft": "5dp",
                  "focusableInTouchMode": "false",
                  "isIndicator": "true",
                  "numStars": "5",
                  "minHeight": "22dp",
                  "layout_marginTop": "3dp",
                  "maxHeight": "22dp",
                  "progressDrawable": {
                    "type": "layer-list",
                    "children": [
                      {
                        "type": "item",
                        "id": "@+android:id/background",
                        "drawable": "@drawable/rating_star_grey"
                      },
                      {
                        "type": "item",
                        "id": "@+android:id/secondaryProgress",
                        "drawable": "@drawable/rating_star_grey"
                      },
                      {
                        "type": "item",
                        "id": "@+android:id/progress",
                        "drawable": "@drawable/rating_star"
                      }
                    ]
                  },
                  "rating": "$product.rating.averageRating"
                },
                {
                  "type": "TextView",
                  "layout_width": "wrap_content",
                  "layout_height": "wrap_content",
                  "text": "~({{product.rating.ratingCount}})",
                  "textColor": "#444444"
                }
              ]
            },
            {
              "type": "HorizontalProgressBar",
              "layout_width": "match_parent",
              "layout_height": "3dp",
              "progressTint": {
                "background": "#efefef",
                "progress": "#339944"
              },
              "progress": "$product.rating.4",
              "max": "$product.rating.ratingCount"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "~({{product.date}}$(date))",
              "textColor": "#444444"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "80dp",
              "visibility": "data",
              "text": "~({{product.dateNull}}$(date))",
              "textColor": "#444444"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "~({{product.date.no-such-path}}$(date))",
              "textColor": "#444444"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "~{{product.tags}}$(join)",
              "textColor": "#444444"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "~({{sellers.$length}} sellers)",
              "textColor": "#444444"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "~({{sellers_1[0].name}} sellers)",
              "textColor": "#444444"
            },
            {
              "type": "TextView",
              "layout_width": "wrap_content",
              "layout_height": "wrap_content",
              "layout_marginBottom": "10dp",
              "text": "~({{sellers_1[$last].name}})",
              "textColor": "#444444"
            }
          ]
        },
        {
          "type": "LinearLayout",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "orientation": "vertical",
          "children": "$sellers.$length",
          "childDataContext": {
            "seller": "sellers[$index]"
          },
          "childType": {
            "type": "LinearLayout",
            "layout_width": "match_parent",
            "layout_height": "wrap_content",
            "orientation": "vertical",
            "children": [
              {
                "type": "TextView",
                "layout_width": "wrap_content",
                "layout_height": "wrap_content",
                "text": "~ {{$index}}$(index) {{seller.name}} [{{seller.rating}}/5]"
              },
              {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "text": "~Rs. {{seller.price}}$(number)"
              }
            ]
          }
        },
        {
          "type": "LinearLayout",
          "layout_width": "match_parent",
          "layout_height": "wrap_content",
          "padding": "8dp",
          "orientation": "horizontal",
          "weightSum": "4",
          "children": [
            {
              "type": "TextView",
              "text": "1",
              "layout_weight": "1",
              "layout_height": "wrap_content",
              "style": "blue"
            },
            {
              "type": "TextView",
              "text": "2",
              "layout_weight": "1",
              "layout_height": "wrap_content",
              "style": "blue"
            },
            {
              "type": "TextView",
              "text": "3",
              "layout_weight": "2",
              "layout_height": "wrap_content",
              "style": "blue"
            }
          ]
        },
        {
          "type": "GifImageView",
          "id": "gif_image_view",
          "layout_width": "100dp",
          "layout_height": "100dp",
          "background": "@drawable/like_1s"
        },
        {
          "type": "GifImageView",
          "id" : "gif_from_web",
          "layout_width" : "wrap_content",
          "layout_height": "wrap_content",
          "background": "http://24.media.tumblr.com/f19be613299b81529e90680e7c559b7a/tumblr_mfjdq2Sz7K1rjxfbno1_r1_500.gif"
        }
      ]
    }
  ]
}
