{
	"view": "container.linear",
	"orientation": "vertical",
	"width": "fill",
	"margin": "10 10 10 5",
	"backgroundColor": "white",
	"children": [{
		"view": "text",
		"text": "@departments.title",
		"padding": "10 10 10 10"
	}, {
		"view": "view",
		"height": "2",
		"backgroundColor": "#FF9933"
	}, {
		"view": "container.absolute",
		"padding": "10 10 10 5",
		"width": "fill",
		"onclick":"true",
		"children": [{
				"view": "networkImage",
				"imageUrl": "@departments.sub[0].image",
				"aspectRatio": "preserve",
				"width": "fill"

			},

			{
				"view": "container.linear",
				"height": "fill",
				"width": "fill",
				"alignChildren": "bottom",

				"children": [{
						"view": "container.linear",
						"backgroundColor": "black",
						"opacity": "0.7",
						"width": "fill",

						"padding": "10 10 10 10",
						"children": [{
								"view": "text",
								"text": "@departments.sub[0].title",
								"textColor": "white"
							}

						]
					}

				]

			}
		]
	}, {
		"view": "container.linear",
		"orientation": "horizontal",
		"width": "fill",
		"children": [{

			"view": "container.absolute",
			"padding": "10 5 5 10",
			"width": "0",
			"weight": "1",
			"children": [{
					"view": "networkImage",
					"imageUrl": "@departments.sub[1].image",
					"aspectRatio": "preserve",
					"width": "fill"

				},

				{
					"view": "container.linear",
					"height": "fill",
					"width": "fill",
					"alignChildren": "bottom",

					"children": [{
							"view": "container.linear",
							"backgroundColor": "black",
							"opacity": "0.7",
							"width": "fill",

							"padding": "10 10 10 10",
							"children": [{
									"view": "text",
									"text": "@departments.sub[1].title",
									"textColor": "white"
								}

							]
						}

					]

				}
			]

		}, {

			"view": "container.absolute",
			"padding": "5 5 10 10",
			"width": "0",
			"weight": "1",
			"children": [{
					"view": "networkImage",
					"imageUrl": "@departments.sub[2].image",
					"aspectRatio": "preserve",
					"width": "fill"

				},

				{
					"view": "container.linear",
					"height": "fill",
					"width": "fill",
					"alignChildren": "bottom",

					"children": [{
							"view": "container.linear",
							"backgroundColor": "black",
							"opacity": "0.7",
							"width": "fill",

							"padding": "10 10 10 10",
							"children": [{
									"view": "text",
									"text": "@departments.sub[2].title",
									"textColor": "white"
								}

							]
						}

					]

				}
			]

		}]
	}]
}